{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",  // O "ESNext" si lo prefieres
    "moduleResolution": "node", // Aseg√∫rate de que sea "node"
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true // Esto puede ayudar a evitar problemas de tipos con bibliotecas de terceros
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
